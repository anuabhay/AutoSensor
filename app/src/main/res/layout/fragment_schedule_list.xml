<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="auto.ausiot.autosensor.WaterLineFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="fill"
        android:gravity="fill"
        android:orientation="horizontal"
        android:background="@drawable/layout_border"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/layout_thin_border"
            >

            <TextView
               android:id="@+id/label_schedule_name"
               android:layout_width="120dp"
               android:layout_height="50dp"
               android:layout_margin="5dp"
               android:layout_marginRight="30dp"
               android:text="Schedule 1"
               android:textAllCaps="true"
               android:textColor="@color/colorPrimary"
               android:textSize="16sp"
               android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="left|center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/layout_thin_border"
            >

        <TextView
                android:id="@+id/label_date_start"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginRight="30dp"
                android:text="20/12"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/label_date_end"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginRight="30dp"
                android:text="10/10"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent"
            android:background="@drawable/layout_thin_border"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <Button
                android:id="@+id/button_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_action_edit_icon"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_action_delete_icon"
                android:textAllCaps="false" />
        </LinearLayout>


    </LinearLayout>



</FrameLayout>
