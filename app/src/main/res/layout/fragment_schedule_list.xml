<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="auto.ausiot.autosensor.WaterLineFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal">

        <TextView
           android:id="@+id/label_schedule_name"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:layout_margin="5dp"
           android:layout_marginRight="30dp"
           android:text="Schedule 1"
           android:textAllCaps="true"
           android:textColor="@color/colorPrimary"
           android:textSize="16sp"
           android:textStyle="bold" />

        <TextView
            android:id="@+id/label_date_range"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginRight="30dp"
            android:text="20/12 - 10/10"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_schedule_type"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginRight="30dp"
            android:text="R"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@drawable/circle_indicator_off"
            android:textAllCaps="false" />


    </LinearLayout>



</FrameLayout>
