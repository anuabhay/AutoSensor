<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="auto.ausiot.autosensor.MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:showDividers="middle"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="438dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="45dp"
            android:text="M"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_1"
            android:layout_alignBottom="@+id/textView_1"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView_1"
            android:layout_toRightOf="@+id/textView_1"
            android:text="T"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_2"
            android:layout_alignBottom="@+id/textView_2"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView_2"
            android:layout_toRightOf="@+id/textView_2"
            android:text="W"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_3"
            android:layout_alignBottom="@+id/textView_3"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView_3"
            android:layout_toRightOf="@+id/textView_3"
            android:text="T"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_4"
            android:layout_alignBottom="@+id/textView_4"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView_4"
            android:layout_toRightOf="@+id/textView_4"
            android:text="F"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_5"
            android:layout_alignBottom="@+id/textView_5"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView_5"
            android:layout_toRightOf="@+id/textView_5"
            android:text="S"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_6"
            android:layout_alignBottom="@+id/textView_6"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/textView_6"
            android:layout_toRightOf="@+id/textView_6"
            android:text="S"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/lo_weeks"
            android:layout_width="1000dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView_1"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >


        <CheckBox
            android:id="@+id/checkBox_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/textView_1"
             />

        <CheckBox
            android:id="@+id/checkBox_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox_1"
            android:layout_alignBottom="@+id/checkBox_1"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/checkBox_1"
            android:layout_toRightOf="@+id/checkBox_1" />

        <CheckBox
            android:id="@+id/checkBox_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox_2"
            android:layout_alignBottom="@+id/checkBox_2"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/checkBox_2"
            android:layout_toRightOf="@+id/checkBox_2" />

        <CheckBox
            android:id="@+id/checkBox_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox_3"
            android:layout_alignBottom="@+id/checkBox_3"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/checkBox_3"
            android:layout_toRightOf="@+id/checkBox_3" />

        <CheckBox
            android:id="@+id/checkBox_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox_4"
            android:layout_alignBottom="@+id/checkBox_4"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/checkBox_4"
            android:layout_toRightOf="@+id/checkBox_4" />

        <CheckBox
            android:id="@+id/checkBox_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox_5"
            android:layout_alignBottom="@+id/checkBox_5"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/checkBox_5"
            android:layout_toRightOf="@+id/checkBox_5" />

        <CheckBox
            android:id="@+id/checkBox_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkBox_6"
            android:layout_alignBottom="@+id/checkBox_6"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/checkBox_6"
            android:layout_toRightOf="@+id/checkBox_6" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lo_weeks"
            android:layout_marginTop="10dp"
            android:text="Duration"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/chronometer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="5dp"
            android:scaleX=".9"
            android:scaleY=".9"
            android:textStyle="bold"
            android:textSize="40sp"
            android:clickable="true"/>

        <TextView

            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:scaleX=".9"
            android:scaleY=".9"
            android:textStyle="bold"
            android:textSize="40sp"
            android:clickable="true"/>

        <!--<TimePicker
            android:id="@+id/chronometer2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/textView_2"
            android:layout_alignStart="@+id/textView_2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="5dp"
            android:scaleX=".9"
            android:scaleY=".9"
            android:textStyle="bold"
            android:timePickerMode="spinner" /> -->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/chronometer2"
            android:layout_marginTop="10dp"
            android:text="Start Time"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/checkBox_enable_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/timePicker"
            android:layout_marginTop="10dp" >

                <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Enabled"
                    android:textColor="@color/colorPrimary"
                    android:textSize="28sp"
                    android:textStyle="bold"/>

                <CheckBox
                    android:id="@+id/checkBox_enable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                />
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/checkBox_enable_layout"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"

            android:text="Save"
            android:background="@drawable/circle"
            android:textColor="#fff"
            android:textSize="22sp"

            tools:text="Save"
            android:textAllCaps="false"/>


        <!--<TimePicker
            android:id="@+id/timePicker_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_toEndOf="@+id/textView_1"
            android:layout_toRightOf="@+id/textView_1"
            android:amPmTextColor="@color/common_google_signin_btn_text_dark_focused"
            android:animateLayoutChanges="true"
            android:elevation="16dp"
            android:scaleX=".9"
            android:scaleY=".9"
            android:textStyle="bold"
            android:timePickerMode="spinner" />-->

        <RadioGroup
            android:id="@+id/radioDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp">

            <RadioButton
                android:id="@+id/radio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_alignStart="@+id/textView_1"
                android:layout_alignLeft="@+id/textView_1"
                android:layout_below="@+id/textView_1"
                android:layout_marginTop="64dp"/>

            <RadioButton
                android:id="@+id/radio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radio_1"
                android:layout_alignBottom="@+id/radio_1"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/radio_1"
                android:layout_toRightOf="@+id/radio_1"
                android:layout_alignStart="@+id/textView_1"
                android:layout_alignLeft="@+id/textView_1"
                android:layout_below="@+id/textView_1"
                android:layout_marginTop="64dp"
                />
            <RadioButton
                android:id="@+id/radio_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radio_1"
                android:layout_alignBottom="@+id/radio_1"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/radio_1"
                android:layout_toRightOf="@+id/radio_1"
                android:layout_alignStart="@+id/textView_1"
                android:layout_alignLeft="@+id/textView_1"
                android:layout_below="@+id/textView_1"
                android:layout_marginTop="64dp"
                />
            <RadioButton
                android:id="@+id/radio_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radio_1"
                android:layout_alignBottom="@+id/radio_1"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/radio_1"
                android:layout_toRightOf="@+id/radio_1"
                android:layout_alignStart="@+id/textView_1"
                android:layout_alignLeft="@+id/textView_1"
                android:layout_below="@+id/textView_1"
                android:layout_marginTop="64dp"
                />
            <RadioButton
                android:id="@+id/radio_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radio_1"
                android:layout_alignBottom="@+id/radio_1"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/radio_1"
                android:layout_toRightOf="@+id/radio_1"
                android:layout_alignStart="@+id/textView_1"
                android:layout_alignLeft="@+id/textView_1"
                android:layout_below="@+id/textView_1"
                android:layout_marginTop="64dp"
                />
            <RadioButton
                android:id="@+id/radio_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radio_1"
                android:layout_alignBottom="@+id/radio_1"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/radio_1"
                android:layout_toRightOf="@+id/radio_1"
                android:layout_alignStart="@+id/textView_1"
                android:layout_alignLeft="@+id/textView_1"
                android:layout_below="@+id/textView_1"
                android:layout_marginTop="64dp"
                />
            <RadioButton
                android:id="@+id/radio_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/radio_1"
                android:layout_alignBottom="@+id/radio_1"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/radio_1"
                android:layout_toRightOf="@+id/radio_1"
                android:layout_alignStart="@+id/textView_1"
                android:layout_alignLeft="@+id/textView_1"
                android:layout_below="@+id/textView_1"
                android:layout_marginTop="64dp"
                />
        </RadioGroup>


        <RadioGroup
            android:id="@+id/radioConfigType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp">

            <RadioButton
                android:id="@+id/radioButton_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/textView_3"
                android:layout_toStartOf="@+id/textView_3"
                android:text="Daily"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/textView_3"
            android:layout_toStartOf="@+id/textView_3"
            android:checked="true"
            android:text="Weekly"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </RadioGroup>

    </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
